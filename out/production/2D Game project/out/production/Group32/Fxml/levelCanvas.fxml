<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #0E1A40;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Canvas fx:id="canvas1" height="400.0" width="600.0" StackPane.alignment="CENTER" />
        <HBox prefHeight="100.0" prefWidth="200.0" StackPane.alignment="BOTTOM_CENTER">
            <children>
                <Button fx:id="pause" mnemonicParsing="false" onAction="#pause" prefHeight="40.0" prefWidth="80.0" text="Pause" style="-fx-base: #4CAF50; -fx-text-fill: white;" />
                <Button fx:id="load" mnemonicParsing="false" onAction="#load" prefHeight="40.0" prefWidth="80.0" text="Load" style="-fx-base: #FFC107; -fx-text-fill: white;" />
                <Button fx:id="save" mnemonicParsing="false" prefHeight="40.0" onAction="#save" prefWidth="80.0" text="Save" style="-fx-base: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="menu" mnemonicParsing="false" onAction="#menu" prefHeight="40.0" prefWidth="80.0" text="Menu" style="-fx-base: #F44336; -fx-text-fill: white;" />

                <!-- Use a StackPane to overlay chip count on chip image -->
                <StackPane />

                <!-- Use an HBox to dynamically display images in the inventory box -->
                <HBox spacing="5.0">
                    <!-- Dynamically create ImageView for each item in the player's inventory -->
                    <Label fx:id="chipCountLabel" textFill="WHITE" />
                    <ImageView fx:id="chipImage" fitHeight="60.0" fitWidth="60.0" />
                    <ImageView fx:id="itemImage1" fitHeight="60.0" fitWidth="60.0" />
                    <ImageView fx:id="itemImage2" fitHeight="60.0" fitWidth="60.0" />
                    <ImageView fx:id="itemImage3" fitHeight="60.0" fitWidth="60.0" />
                    <ImageView fx:id="itemImage4" fitHeight="60.0" fitWidth="60.0" />
                    <Label fx:id="timerLabel" prefHeight="35.0" prefWidth="86.0" style="-fx-font-size: 24; -fx-text-fill: white;" text="00:00" />
                </HBox>
            </children>
        </HBox>
    </children>
</StackPane>